<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Incident_reporting">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">
                <!-- Incident details -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"
                    android:text="Name of the Victim "
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/incident_nameofvic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/edit_text"
                    android:hint="Name of the victim"
                    android:inputType="text"
                    android:padding="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"
                    android:text="Name of Defendend "
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/incident_nameofdef"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/edit_text"
                    android:hint="Name of the defendend"
                    android:inputType="text"
                    android:padding="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"
                    android:text="Phone number of victim "
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/incident_nofvic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/edit_text"
                    android:hint="Enter your phone number"
                    android:inputType="text"
                    android:padding="12dp"/>


                <!-- Incident Description -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"
                    android:text="Describe the Incident "
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/incident_description"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@android:drawable/edit_text"
                    android:gravity="top"
                    android:hint="Provide a detailed description of the incident"
                    android:inputType="textMultiLine"
                    android:padding="12dp" />

                <!-- Date and Time -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:text="Incident Date and Time"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/incident_date_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="Select date and time"
                    android:inputType="none" />

                <!-- Location -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Location"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/incident_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/edit_text"
                    android:hint="Enter the location of the incident"
                    android:inputType="text"
                    android:padding="12dp" />

                <!-- Upload Evidence -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/black"
                    android:text="Upload Evidence (Optional)"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/upload_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Photo/Video" />

                <!-- Submit Button -->
                <Button
                    android:id="@+id/submit_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:padding="12dp"
                    android:text="Submit Report"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </ScrollView>


</LinearLayout>
